<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <!-- 修改密码界面 -->

    <include
        android:id="@+id/line_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/common_top" />

    <LinearLayout
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/login_logo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:orientation="vertical"
        android:paddingTop="45dip" >

        <!-- <TextView android:text="@string/re_password_notice" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/white_text_style_16" android:layout_marginBottom="10dip" android:textColor="#ff9000"/> -->


            <EditText
                android:id="@+id/old_password"
                style="@style/black_16_style"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:background="@drawable/input_bg"
                android:hint="@string/old_password_hint"
                android:inputType="textPassword"
                android:singleLine="true" />

            <EditText
                android:id="@+id/password"
                style="@style/black_16_style"
                android:layout_marginTop="15dip"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:background="@drawable/input_bg"
                android:hint="@string/new_password_hint"
                android:inputType="textPassword"
                android:singleLine="true" />

            <EditText
                android:id="@+id/re_password"
                style="@style/black_16_style"
                android:layout_marginTop="15dip"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:background="@drawable/input_bg"
                android:hint="@string/re_password_hint"
                android:inputType="textPassword"
                android:singleLine="true" />

            <Button
                android:id="@+id/bt_mod_pwd"
                style="@style/top_tv_style"
                android:layout_marginTop="30.0dip"
                android:layout_width="fill_parent"
                android:layout_height="38dip"
                android:background="@drawable/login_button_normal"
                android:text="@string/ok" />
    </LinearLayout>

</LinearLayout>