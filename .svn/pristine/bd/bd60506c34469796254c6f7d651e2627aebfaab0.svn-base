<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical" >

    <!-- every platform has its name in sdk @string,for example sina=umeng_socialize_text_sina_key -->

    <CheckBox
        android:id="@+id/checkBox_text_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="加入文字"
        android:textColor="@color/umeng_black" />
    <!-- <CheckBox -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:text="加入图片" -->
    <!-- android:id="@+id/checkBox_image_editor" -->
    <!-- android:checked="false" -->
    <!-- /> -->

    <RadioGroup
        android:id="@+id/buttongroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"
            android:textColor="@color/umeng_black" />

        <RadioButton
            android:id="@+id/musicbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐"
            android:textColor="@color/umeng_black" />

        <RadioButton
            android:id="@+id/videobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:textColor="@color/umeng_black" />

        <RadioButton
            android:id="@+id/nonebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="无"
            android:textColor="@color/umeng_black" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBox_link_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="加入链接"
        android:textColor="@color/umeng_black" />

    <CheckBox
        android:id="@+id/checkBox_title_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="加入title"
        android:textColor="@color/umeng_black" />

    <Button
        android:id="@+id/share_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/umeng_blue"
        android:text="分享"
        android:textColor="@color/umeng_white"
        android:textSize="14dp" />

</LinearLayout>